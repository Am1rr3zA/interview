<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%d{HH:mm:ss.SSS} %-5level %c{1} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>

        <!-- Per-class log level -->
        <Logger name="com.stripe.interview.util.HttpClientService"
                level="debug"
                additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root (default for everything else) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>
</Configuration>
